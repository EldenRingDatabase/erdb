{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Tools",
    "type": "object",
    "properties": {
        "Tools": {
            "title": "Tool Map",
            "additionalProperties": false,
            "propertyNames": {
                "$ref": "./enums/item-names.schema.json"
            },
            "patternProperties": {
                "^.+$": {
                    "type": "object",
                    "$ref": "tools.schema.json#/definitions/Tool"
                }
            }
        }
    },
    "required": ["Tools"],
    "definitions": {
        "Tool": {
            "title": "Tool",
            "description": "Schema for Tool items.",
            "allOf": [{"$ref": "item.schema.json"}],
            "properties": {
                "name": {
                    "#comment": "Override list of possible names to be Item names only.",
                    "$ref": "./enums/item-names.schema.json"
                },
                "category": {
                    "description": "Tool category to discern its use.",
                    "type": "string",
                    "enum": [
                        "Essentials", "Edibles", "Pots", "Aromatics",
                        "Throwables", "Offensive", "Grease", "Utilities",
                        "Golden Runes", "Rememberances", "Online"
                    ]
                },
                "availability": {
                    "description": "Defines whether the item is available always, only during singleplayer or only during multiplayer.",
                    "type": "string",
                    "enum": ["Always", "Singleplayer", "Multiplayer"]
                },
                "fp_cost": {
                    "description": "Cost of FP to use.",
                    "type": "integer",
                    "default": 0,
                    "minimum": 0
                },
                "is_consumed": {
                    "description": "Specifies whether the item is consumed on use.",
                    "type": "boolean",
                    "default": false
                },
                "is_ladder_usable": {
                    "description": "Specifies whether the item is available on ladders.",
                    "type": "boolean",
                    "default": false
                },
                "is_horseback_usable": {
                    "description": "Specifies whether the item is available on horseback.",
                    "type": "boolean",
                    "default": true
                },
                "effects": {
                    "description": "Effects of the tool.",
                    "type": "array",
                    "minItems": 0,
                    "items": { "$ref": "effect.schema.json" },
                    "default": []
                }
            },
            "required": [
                "category", "availability", "fp_cost", "is_consumed",
                "is_ladder_usable", "is_horseback_usable", "effects"
            ]
        }
    }
}
