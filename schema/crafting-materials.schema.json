{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Crafting Materials",
    "type": "object",
    "properties": {
        "CraftingMaterials": {
            "title": "Crafting Material Map",
            "additionalProperties": false,
            "propertyNames": {
                "$ref": "./enums/item-names.schema.json"
            },
            "patternProperties": {
                "^.+$": {
                    "type": "object",
                    "$ref": "crafting-materials.schema.json#/definitions/CraftingMaterial"
                }
            }
        }
    },
    "required": ["CraftingMaterials"],
    "definitions": {
        "CraftingMaterial": {
            "title": "Crafting Material",
            "description": "Schema for Crafting Material items.",
            "allOf": [{"$ref": "item.schema.json"}],
            "properties": {
                "name": {
                    "#comment": "Override list of possible names to be Item names only.",
                    "$ref": "./enums/item-names.schema.json"
                },
                "category": {
                    "description": "Crafting Material category to discern its use.",
                    "type": "string",
                    "enum": [
                        "Fauna", "Flora", "Object", "Flask",
                        "Smithing Stone", "Somber Smithing Stone", "Glovewort"
                    ]
                },
                "hint": {
                    "description": "In-game hint on where to find the Crafting Material.",
                    "type": "string",
                    "minLength": 1
                },
                "products": {
                    "description": "List of crafting products of this item.",
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "oneOf": [
                            { "$ref": "./enums/item-names.schema.json" },
                            { "$ref": "./enums/ammo-names.schema.json" }
                        ]
                    }
                }
            },
            "required": ["category", "hint", "products"]
        }
    }
}
