{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Bolstering Materials",
    "type": "object",
    "properties": {
        "BolsteringMaterials": {
            "title": "Bolstering Material Map",
            "additionalProperties": false,
            "propertyNames": {
                "$ref": "./enums/item-names.schema.json"
            },
            "patternProperties": {
                "^.+$": {
                    "type": "object",
                    "$ref": "bolstering-materials.schema.json#/definitions/BolsteringMaterial"
                }
            }
        }
    },
    "required": ["BolsteringMaterials"],
    "definitions": {
        "BolsteringMaterial": {
            "title": "Bolstering Material",
            "description": "Schema for Bolstering Material items.",
            "allOf": [{"$ref": "item.schema.json"}],
            "properties": {
                "name": {
                    "#comment": "Override list of possible names to be Item names only.",
                    "$ref": "./enums/item-names.schema.json"
                },
                "category": {
                    "description": "Bolstering Material category to discern its use.",
                    "type": "string",
                    "enum": ["Flask", "Smithing Stone", "Somber Smithing Stone", "Glovewort"]
                }
            },
            "required": ["category"]
        }
    }
}
