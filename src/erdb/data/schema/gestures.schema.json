{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Gestures",
    "type": "object",
    "properties": {
        "Gestures": {
            "title": "Gesture Map",
            "additionalProperties": false,
            "propertyNames": {
                "$ref": "./enums/item-names.schema.json"
            },
            "patternProperties": {
                "^.+$": {
                    "type": "object",
                    "$ref": "gestures.schema.json#/definitions/Gesture"
                }
            }
        }
    },
    "required": ["Gestures"],
    "definitions": {
        "Gesture": {
            "title": "Gesture",
            "description": "Schema for Gesture items.",
            "allOf": [{"$ref": "item.schema.json"}],
            "properties": {
                "name": {
                    "#comment": "Override list of possible names to be Item names only.",
                    "$ref": "./enums/item-names.schema.json"
                }
            }
        }
    }
}
