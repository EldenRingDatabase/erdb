{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Ammo",
    "type": "object",
    "properties": {
        "Ammo": {
            "title": "Ammo Map",
            "additionalProperties": false,
            "propertyNames": {
                "$ref": "./enums/ammo-names.schema.json"
            },
            "patternProperties": {
                "^.+$": {
                    "type": "object",
                    "$ref": "ammo.schema.json#/definitions/Ammo"
                }
            }
        }
    },
    "required": ["Ammo"],
    "definitions": {
        "Ammo": {
            "title": "Ammo",
            "description": "Schema for Ammo items.",
            "allOf": [{"$ref": "item.schema.json"}],
            "properties": {
                "name": {
                    "#comment": "Override list of possible names to be Ammo names only.",
                    "$ref": "./enums/ammo-names.schema.json"
                },
                "damage": {
                    "description": "Base attack power values.",
                    "type": "object",
                    "properties": {
                        "physical": { "type": "integer" },
                        "magic": { "type": "integer" },
                        "fire": { "type": "integer" },
                        "lightning": { "type": "integer" },
                        "holy": { "type": "integer" },
                        "stamina": { "type": "integer" }
                    },
                    "additionalProperties": false
                },
                "category": {
                    "description": "Category of the ammo.",
                    "type": "string",
                    "enum": ["Arrow", "Greatarrow", "Bolt", "Greatbolt"]
                },
                "effects": {
                    "description": "Effects of the ammo, always present.",
                    "type": "array",
                    "items": { "$ref": "effect.schema.json" },
                    "default": []
                },
                "status_effects": {
                    "description": "Status effects of the ammo, dealt on hit.",
                    "type": "object",
                    "maxProperties": 3,
                    "propertyNames": { "$ref": "./enums/status-effect-names.schema.json" },
                    "patternProperties": {
                        "^.+$": { "type": "integer" }
                    },
                    "additionalProperties": false
                }
            },
            "required": ["damage", "category", "effects", "status_effects"]
        }
    }
}
