{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Info",
    "type": "object",
    "properties": {
        "Info": {
            "title": "Info Items Map",
            "additionalProperties": false,
            "propertyNames": {
                "$ref": "./enums/item-names.schema.json"
            },
            "patternProperties": {
                "^.+$": {
                    "type": "object",
                    "$ref": "info.schema.json#/definitions/Info"
                }
            }
        }
    },
    "required": ["Info"],
    "definitions": {
        "Info": {
            "title": "Info",
            "description": "Schema for Info items.",
            "allOf": [{"$ref": "item.schema.json"}],
            "properties": {
                "name": {
                    "#comment": "Override list of possible names to be Item names only.",
                    "$ref": "./enums/item-names.schema.json"
                },
                "category": {
                    "description": "Info Item category to discern its use.",
                    "type": "string",
                    "enum": ["Painting", "Note", "Tutorial", "Clue"]
                }
            },
            "required": ["category"]
        }
    }
}
