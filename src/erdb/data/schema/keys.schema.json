{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Keys",
    "type": "object",
    "properties": {
        "Keys": {
            "title": "Key Map",
            "additionalProperties": false,
            "propertyNames": {
                "$ref": "./enums/item-names.schema.json"
            },
            "patternProperties": {
                "^.+$": {
                    "type": "object",
                    "$ref": "keys.schema.json#/definitions/Key"
                }
            }
        }
    },
    "required": ["Keys"],
    "definitions": {
        "Key": {
            "title": "Key",
            "description": "Schema for Key items.",
            "allOf": [{"$ref": "item.schema.json"}],
            "properties": {
                "name": {
                    "#comment": "Override list of possible names to be Item names only.",
                    "$ref": "./enums/item-names.schema.json"
                },
                "category": {
                    "description": "Key category to discern its use.",
                    "type": "string",
                    "enum": [
                        "Great Rune", "Mending Rune", "Crystal Tear",
                        "Container", "Exploration", "Quest", "Exchange",
                        "Feature", "Whetblade", "Map"
                    ]
                }
            },
            "required": ["category"]
        }
    }
}
